@model IEnumerable<ReservationSystem.creditinfo>

@{
    ViewBag.Title = "Index";
}

<h2>Card Details</h2>

<p>
    @Html.ActionLink("Add New Card", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cardType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cardType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.creditId }) |
            @Html.ActionLink("Details", "Details", new { id=item.creditId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.creditId })
        </td>
    </tr>
}

</table>
