                <p> <a href="@Url.Action("Create", "reservations")" class="btn btn-default">Back</a></p>
            </div>
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
